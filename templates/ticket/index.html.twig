{% extends 'base.html.twig' %}

{% block title %}Ticket index{% endblock %}

{% block body %}
    <h1>Ticket index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Subject</th>
                <th>Description</th>
                <th>Opened</th>
                <th>Closed</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.status }}</td>
                <td>{{ ticket.subject }}</td>
                <td>{{ ticket.description }}</td>
                <td>{{ ticket.opened ? ticket.opened|date('Y-m-d H:i:s') : '' }}</td>
                {% if (ticket.closed) %}
                    <td><a href="{{ path('ticket_reopen', {'id': ticket.id}) }}">{{ ticket.closed ? ticket.closed|date('Y-m-d H:i:s') : '' }}</a></td>

                {% endif %}
                <td>
                    <a href="{{ path('ticket_show', {'id': ticket.id}) }}">show</a>
                    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ticket_new') }}">Create new</a>
{% endblock %}
